<phpunit
	backupGlobals="false"
	backupStaticAttributes="false"
	bootstrap="tests/bootstrap.php"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="false"
	stopOnError="false"
	stopOnFailure="false"
	stopOnIncomplete="false"
	stopOnSkipped="false"
	syntaxCheck="false"
	verbose="true"
	>
	<testsuites>
		<testsuite>
			<directory prefix="test-" suffix=".php">./tests/premium/</directory>
		</testsuite>
	</testsuites>

	<filter>
		<whitelist>
			<directory>./premium/classes</directory>
			<file>./premium/class-premium.php</file>
			<file>./wp-seo-premium.php</file>
		</whitelist>
	</filter>
</phpunit>
