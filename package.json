{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.13.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/grunt-*",
      "**/eslint*",
      "**/sassdash"
    ]
  },
  "scripts": {
    "lint": "lerna run lint",
    "test": "lerna run test --stream",
    "install-ci": "lerna run install-ci",
    "link-all": "lerna exec yarn link",
    "unlink-all": "lerna exec yarn unlink",
    "transfer-branch": "./transfer-branch.sh",
    "publish": "lerna publish --contents dist"
  }
}
