{
  "name": "@yoast/social-metadata-previews",
  "version": "1.17.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Yoast/javascript.git",
    "directory": "packages/social-metadata-previews"
  },
  "author": "Team Yoast",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "prepublishOnly": "rm -rf dist && cp -R src dist && cp package.json dist/package.json && json -I -f dist/package.json -e \"this.main='index.js'\" && cp .babelrc dist/.babelrc",
    "test": "jest --coverage",
    "lint": "eslint . --max-warnings=0"
  },
  "jest": {
    "testURL": "http://localhost",
    "testRegex": ".*Test.js$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!yoastseo|lodash-es|memize).+\\.js$"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest/setupTests.js",
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/jest/__mocks__/styleMock.js",
      "^lodash-es$": "lodash"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/deprecated/**/*.js"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@wordpress/i18n": "^4.42.13",
    "@yoast/replacement-variable-editor": "^1.17.0",
    "@yoast/social-metadata-forms": "^1.17.0",
    "@yoast/style-guide": "^0.13.0",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@yoast/browserslist-config": "^1.2.2",
    "jest-styled-components": "^7.1.1",
    "raf": "^3.4.1",
    "react-test-renderer": "^18.2.0"
  },
  "peerDependencies": {}
}
