{
  "name": "@yoast/ui-library",
  "version": "4.1.0",
  "description": "Yoast UI library",
  "main": "build/index.js",
  "style": "build/css/style.css",
  "files": [
    "build",
    "!*.map"
  ],
  "author": "Team Yoast <support@yoast.com>",
  "license": "GPL-3.0",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "clean:build": "rm -rf build",
    "build": "yarn clean:build && yarn build:js && yarn build:css",
    "build:js": "babel src --out-dir build --ignore \"src/**/*.stories.js\",\"src/**/stories.js\",\"src/**/docs/**/*.js\"",
    "build:css": "node ./scripts/build-css.js",
    "watch": "yarn watch:js & yarn watch:css",
    "watch:js": "yarn build:js --watch",
    "watch:css": "node ./scripts/watch-css.js",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build",
    "publish:storybook": "./scripts/publish-storybook.sh",
    "test:storyshots": "yarn build:storybook --test --quiet && jest tests/storyshots.js",
    "t_st": "yarn test:storyshots",
    "lint": "eslint . --max-warnings=3"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/parser": "^7.23.9",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@mdx-js/react": "^2.1.5",
    "@storybook/addon-a11y": "^7.6.17",
    "@storybook/addon-docs": "^7.6.17",
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/addon-styling-webpack": "^0.0.6",
    "@storybook/addons": "^7.6.17",
    "@storybook/mdx2-csf": "^1.1.0",
    "@storybook/preview-api": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-webpack5": "^7.6.17",
    "@storybook/theming": "^7.6.17",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@wordpress/jest-preset-default": "^8.0.1",
    "@yoast/browserslist-config": "^1.2.3",
    "@yoast/jest-preset": "^1.0.1",
    "@yoast/postcss-preset": "^1.2.0",
    "@yoast/tailwindcss-preset": "^2.3.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "eslint": "^9.16.0",
    "eslint-config-yoast": "^7.0.0",
    "globals": "^15.12.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.19",
    "postcss-loader": "^7.3.4",
    "puppeteer": "^17.1.3",
    "storybook": "^7.6.17",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.16"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.8",
    "@heroicons/react": "^1.0.6",
    "@reduxjs/toolkit": "^1.8.3",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react-animate-height": "^3.1.0",
    "react-error-boundary": "^3.1.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
