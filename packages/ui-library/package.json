{
  "name": "@yoast/ui-library",
  "version": "1.0.0",
  "description": "Yoast UI library",
  "main": "build/index.js",
  "author": "Team Yoast <support@yoast.com>",
  "license": "GPL-3.0",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "clean:build": "rm -rf build",
    "build:js": "babel src --out-dir build --ignore \"src/**/*.stories.js\",\"src/**/stories.js\"",
    "build:css": "node ./scripts/css.js",
    "build": "yarn clean:build && yarn build:js && yarn build:css",
    "build:storybook": "build-storybook",
    "lint": "eslint src --max-warnings=0",
    "storybook": "start-storybook -p 6006",
    "publish:storybook": "./scripts/publish-storybook.sh"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/eslint-plugin": "^7.16.5",
    "@babel/parser": "^7.16.8",
    "@storybook/addon-a11y": "^6.4.14",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addons": "^6.3.9",
    "@storybook/react": "^6.3.8",
    "@storybook/theming": "^6.3.9",
    "@tailwindcss/forms": "^0.4.0",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "@yoast/babel-preset": "link:packages/babel-preset",
    "@yoast/postcss-preset": "link:packages/postcss-preset",
    "@yoast/tailwindcss-preset": "link:packages/tailwindcss-preset",
    "babel-loader": "^8.2.2",
    "eslint": "^7.32.0",
    "eslint-config-yoast": "^5.0.17",
    "eslint-plugin-react": "^7.26.0",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.23"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.5",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "@wordpress/element": "^4.1.1"
  }
}
