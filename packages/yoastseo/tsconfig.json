{
  "include": [
    "src/**/*.js",
    "vendor"
  ],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./types",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
  }
}
