{
  "name": "@yoast/seo-integration",
  "version": "1.0.0",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 3,
        "functions": 1,
        "lines": 5,
        "statements": 4
      }
    },
    "coveragePathIgnorePatterns": [
      "node_modules"
    ],
    "testRegex": "/tests/.*\\.(js)$",
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\](?!lodash-es|lodash|@yoast).+\\.js$"
    ],
    "timers": "fake"
  },
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yoast/wordpress-seo",
    "directory": "packages/seo-integration"
  },
  "author": "Team Yoast",
  "license": "GPL-3.0",
  "scripts": {
    "build": "yarn clean && babel src --out-dir build --source-maps",
    "build:prod": "yarn clean && babel src --out-dir build",
    "watch": "yarn clean && babel src --watch --out-dir build --source-maps",
    "clean": "rimraf build",
    "lint": "eslint src --max-warnings=0",
    "lint:watch": "esw src --max-warnings=0 --watch",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@yoast/helpers": "^0.16.0",
    "@yoast/replacement-variables": "link:packages/replacement-variables",
    "@yoast/seo-store": "link:packages/seo-store",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/eslint-plugin": "^7.14.5",
    "@testing-library/react-hooks": "^7.0.2",
    "@wordpress/babel-preset-default": "^6.3.4",
    "babel-jest": "^27.3.1",
    "eslint": "^8.1.0",
    "eslint-config-yoast": "^5.0.17",
    "eslint-watch": "^8.0.0",
    "jest": "^27.3.1",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "@wordpress/data": "^6.1.2",
    "@wordpress/element": "^4.0.3",
    "@wordpress/hooks": "^3.2.1",
    "@wordpress/i18n": "^4.2.4",
    "react": "^17.0.1",
    "yoastseo": "^1.91.0"
  }
}
